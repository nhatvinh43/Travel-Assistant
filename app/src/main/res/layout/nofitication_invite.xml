<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        app:srcCompat="@drawable/ic_wedding_invitation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imgLogo">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/pushNotificationInvitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/quicksand"
            android:text="@string/invitationPH"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pushNotificationInvitation">

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:fontFamily="@font/quicksand_bold"
                android:foreground="@android:color/transparent"
                android:text="@string/accept"/>

            <Button
                android:id="@+id/btnDenied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:fontFamily="@font/quicksand_bold"
                android:foreground="@android:color/transparent"
                android:text="@string/deny"
                android:textColor="@color/purpleRedAccent"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>