<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/stopPointInfoRatingBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_left" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/ratings"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RatingBar
        android:id="@+id/stopPointInfoRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:stepSize="1"
        android:numStars="5"
        android:secondaryProgressTint="@android:color/transparent"
        android:progressTint="@color/yellowAccent"
        android:progressBackgroundTint="@color/form"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.RatingBar"/>

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_medium"
        android:text="@string/comment"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/stopPointInfoRatingBar"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_below="@+id/comment"
        android:id="@+id/stopPointInfoCommentBox"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:paddingTop="70dp"
        android:paddingBottom="70dp"
        android:background="@drawable/form"
        android:fontFamily="@font/quicksand"
        android:textSize="15sp"
        android:textAlignment="center"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_paper_plane" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp">
        <Button
            android:elevation="0dp"
            android:id="@+id/stopPointInfoSubmitRate"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@drawable/form"
            android:text="@string/send"
            android:textAllCaps="false"
            android:fontFamily="@font/quicksand"
            android:textSize="15sp"
            android:backgroundTint="@color/yellowAccent"/>
    </LinearLayout>


</RelativeLayout>