<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/tourInfo"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/tourInfoEditTour"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_edit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"/>
    </RelativeLayout>


        <ScrollView
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="60dp"
                android:paddingEnd="60dp">

                <TextView
                    android:id="@+id/tourInfoPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="@string/tourPricePH"
                    android:textSize="20sp"
                    android:background="@drawable/form"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    />

                <TextView
                    android:id="@+id/tourInfoPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginTop="7dp"
                    android:text="@string/privacyPH"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tourInfoStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/form"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/quicksand"
                    android:backgroundTint="@color/adultCountBg"
                    android:layout_marginTop="15dp"
                    android:text="@string/tourStatusPH"
                    android:textSize="15sp"/>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/mainInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/firstRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        >


                    <RelativeLayout
                        android:id="@+id/secondRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="20dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentStart="true">

                            <TextView
                                android:id="@+id/tourInfoAdult"
                                android:layout_width="110dp"
                                android:layout_height="45dp"
                                android:background="@drawable/form"
                                android:fontFamily="@font/quicksand"
                                android:textAlignment="textEnd"
                                android:paddingEnd="30dp"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"/>

                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/adultbg"
                                android:src="@drawable/ic_adult" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="end"
                            android:layout_alignParentEnd="true">

                            <TextView
                                android:id="@+id/tourInfoChildren"
                                android:layout_width="110dp"
                                android:layout_height="45dp"
                                android:background="@drawable/form"
                                android:fontFamily="@font/quicksand"
                                android:textAlignment="textEnd"
                                android:paddingEnd="30dp"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"/>

                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/childrenbg"
                                android:src="@drawable/ic_child" />
                        </RelativeLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/thirdRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/secondRow"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/startDateAttr"
                                android:textSize="20sp" />

                            <TextView

                                android:id="@+id/tourInfoStartDate"
                                android:layout_width="270dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="10dp"
                                android:textSize="15sp"
                                android:background="@drawable/form"
                                android:fontFamily="@font/quicksand"
                                android:textAlignment="center"
                                android:gravity="center_vertical|center_horizontal"/>
                        </LinearLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/fourthRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thirdRow"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/endDateAttr"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tourInfoEndDate"
                                android:layout_width="270dp"
                                android:layout_height="45dp"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/form"
                                android:fontFamily="@font/quicksand"
                                android:textAlignment="center"
                                android:gravity="center_vertical"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fifthRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fourthRow"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:id="@+id/startTourText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/startTour"
                            android:fontFamily="@font/quicksand"
                            android:layout_centerHorizontal="true"
                            android:textSize="15sp"
                            />
                        <ImageButton

                            android:layout_below="@+id/startTourText"
                            android:id="@+id/tourInfoStartTour"
                            android:layout_width="65dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_key"
                            android:background="@android:color/transparent"/>

                    </RelativeLayout>

                </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>


</LinearLayout>