<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/card"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="0.40"
        android:layout_marginTop="-5dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="230dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            app:srcCompat="@drawable/ic_sign_up" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/cardBackground"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="0.15"
        app:cardElevation="5dp"
        android:layout_marginTop="-55dp">

        <EditText
            android:id="@+id/tourInfoEditName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="-25dp"
            android:fontFamily="@font/quicksand_medium"
            android:textAlignment="center"
            android:hint="@string/tourNamePrompt"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:textSize="25sp"
            android:background="@android:color/transparent">

        </EditText>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center_horizontal|center|top"
        app:cardElevation="10dp"
        android:layout_weight="0.575"
        android:layout_marginTop="-45dp"
        >

        <ScrollView
            android:overScrollMode="never"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/mainInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/firstRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    >


                    <LinearLayout
                        android:id="@+id/tourInfoEditprivacyAndStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start
"
                            android:fontFamily="@font/quicksand"
                            android:text="@string/privateAttr"
                            android:textSize="18sp" />

                        <Switch
                            android:id="@+id/tourInfoEditIsPrivate"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:layout_marginTop="10dp">

                        </Switch>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="end"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start
"                          android:layout_marginStart="7dp"
                            android:fontFamily="@font/quicksand"
                            android:text="@string/statusAttr"
                            android:textSize="18sp" />
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/tourInfoEditStatus"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:entries="@array/spinnerItems">
                        </androidx.appcompat.widget.AppCompatSpinner>
                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/secondRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/firstRow"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true">

                        <EditText
                            android:id="@+id/tourInfoEditAdult"
                            android:layout_width="110dp"
                            android:layout_height="45dp"
                            android:background="@drawable/form"
                            android:fontFamily="@font/quicksand"
                            android:textAlignment="textEnd"
                            android:inputType="number"
                            android:paddingEnd="30dp"
                            android:layout_centerVertical="true"/>

                        <ImageButton
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:background="@drawable/adultbg"
                            android:src="@drawable/ic_adult" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:layout_alignParentEnd="true">

                        <EditText
                            android:id="@+id/tourInfoEditChildren"
                            android:layout_width="110dp"
                            android:layout_height="45dp"
                            android:background="@drawable/form"
                            android:fontFamily="@font/quicksand"
                            android:textAlignment="textEnd"
                            android:inputType="number"
                            android:paddingEnd="30dp" />

                        <ImageButton
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:background="@drawable/childrenbg"
                            android:src="@drawable/ic_child"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/thirdRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/secondRow"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="@string/startDateAttr"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tourInfoEditStartDate"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp"
                            android:background="@drawable/form"
                            android:fontFamily="@font/quicksand"
                            android:textAlignment="center"
                            android:gravity="center_vertical"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/tourInfoEditStartDateButton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/form"
                        android:src="@drawable/ic_calendar" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/fourthRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/thirdRow"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="@string/endDateAttr"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tourInfoEditEndDate"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/form"
                            android:fontFamily="@font/quicksand"
                            android:textAlignment="center"
                            android:gravity="center_vertical"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/tourInfoEditEndDateButton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/form"
                        android:src="@drawable/ic_calendar" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/startLocationRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fourthRow"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="@string/startLocationAttr"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tourInfoEditStartLocation"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/form"
                            android:fontFamily="@font/quicksand"
                            android:textAlignment="center"
                            android:gravity="center_vertical"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/tourInfoEditStartLocationButton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/form"
                        android:src="@drawable/ic_location" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/endLocationRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/startLocationRow"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="@string/endLocationAttr"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tourInfoEditEndLocation"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/form"
                            android:fontFamily="@font/quicksand"
                            android:textAlignment="center"
                            android:gravity="center_vertical"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/tourInfoEditEndLocationButton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/form"
                        android:src="@drawable/ic_location" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fifthRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/endLocationRow"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:id="@+id/costContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="@string/budgetAttr"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/tourInfoEditMinCost"
                            android:layout_width="115dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/form"
                            android:fontFamily="@font/quicksand"
                            android:inputType="number"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:gravity="center_vertical"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="10dp"
                        android:text="@string/to"
                        android:fontFamily="@font/quicksand"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/tourInfoEditMaxCost"
                        android:textSize="12sp"
                        android:layout_width="115dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="-1dp"
                        android:layout_marginBottom="23dp"
                        android:background="@drawable/form"
                        android:fontFamily="@font/quicksand"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:gravity="center_vertical"/>

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/sixthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <Button
                    android:id="@+id/tourInfoEditConfirmButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginEnd="10dp"
                    android:text="@string/confirm"
                    android:textAllCaps="false"
                    android:fontFamily="@font/quicksand"
                    android:textSize="15sp"
                    android:textColor="@color/confirm"/>

                <Button
                    android:id="@+id/tourInfoEditCancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:fontFamily="@font/quicksand"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:layout_marginStart="10dp"/>


            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>