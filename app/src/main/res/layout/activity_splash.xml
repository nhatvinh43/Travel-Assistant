<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:background="@drawable/gradient">


    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_splash" />

    <TextView
            android:id="@+id/splashText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_image"
            android:text="@string/splashText1"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="30sp"
            android:layout_marginStart="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/splashText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashText1"
        android:text="@string/splashText2"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="30sp"

        android:layout_marginStart="50dp"/>



</RelativeLayout>