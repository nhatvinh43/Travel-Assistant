<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/stopPointInfoEdit"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_edit"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"/>
    </RelativeLayout>


    <ScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="60dp"
            android:paddingEnd="60dp">

            <TextView
                android:id="@+id/stopPointInfoPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/tourPricePH"
                android:textSize="20sp"
                android:background="@drawable/form"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                />

            <TextView
                android:id="@+id/stopPointInfoServiceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:background="@drawable/form"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/quicksand"
                android:backgroundTint="@color/adultCountBg"
                android:layout_marginTop="15dp"
                android:text="@string/restaurant"
                android:textSize="15sp"/>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:id="@+id/mainInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/firstRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    >


                    <RelativeLayout
                        android:id="@+id/secondRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/address"
                                android:textSize="20sp" />

                            <TextView

                                android:id="@+id/stopPointInfoAddress"
                                android:layout_width="270dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="13dp"
                                android:paddingBottom="13dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginTop="10dp"
                                android:textSize="15sp"
                                android:background="@drawable/form"
                                android:fontFamily="@font/quicksand"
                                android:textAlignment="center"
                                android:gravity="center_vertical|center_horizontal"/>
                        </LinearLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/thirdRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/secondRow"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/stopPointInfoArrivalDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/arrival"
                                android:textSize="20sp" />

                            <TextView

                                android:id="@+id/stopPointInfoStartDate"
                                android:layout_width="270dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="10dp"
                                android:textSize="15sp"
                                android:background="@drawable/form"
                                android:fontFamily="@font/quicksand"
                                android:textAlignment="center"
                                android:gravity="center_vertical|center_horizontal"/>
                        </LinearLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/fourthRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thirdRow"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/stopPointInfoLeaveDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/leave"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/stopPointInfoEndDate"
                                android:layout_width="270dp"
                                android:layout_height="45dp"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/form"
                                android:fontFamily="@font/quicksand"
                                android:textAlignment="center"
                                android:gravity="center_vertical"/>
                        </LinearLayout>

                    </RelativeLayout>



                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>