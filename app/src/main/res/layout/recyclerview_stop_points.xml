<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/StopPointItemParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_marginStart="20dp"
            android:id="@+id/parentSP"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/mAvatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical"
                app:srcCompat="@drawable/ic_sign_in" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:text="@string/savedStopPointNamePH"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:paddingStart="20dp"
                android:paddingTop="5dp"
                android:paddingEnd="60dp"
                android:text="@string/savedStopPointAddressPH"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>